@using EventEaseApp.Models

<div class="event-card">
    <div class="event-card-header">
        <h3 class="event-title">@Event.Name</h3>
        <span class="event-capacity">Capacity: @Event.Capacity</span>
    </div>
    
    <div class="event-card-body">
        <div class="event-info">
            <div class="event-info-item">
                <span class="icon">üìÖ</span>
                <span class="label">Date:</span>
                <span class="value">@Event.Date.ToString("dddd, MMMM dd, yyyy")</span>
            </div>
            
            <div class="event-info-item">
                <span class="icon">üïí</span>
                <span class="label">Time:</span>
                <span class="value">@Event.Date.ToString("hh:mm tt")</span>
            </div>
            
            <div class="event-info-item">
                <span class="icon">üìç</span>
                <span class="label">Location:</span>
                <span class="value">@Event.Location</span>
            </div>
        </div>
        
        @if (!string.IsNullOrWhiteSpace(Event.Description) && ShowDescription)
        {
            <p class="event-description">@Event.Description</p>
        }
    </div>
    
    @if (ShowDetailsButton)
    {
        <div class="event-card-footer">
            <a href="/events/@Event.Id" class="btn-details">View Details</a>
        </div>
    }
</div>

@code {
    /// <summary>
    /// The event to display in the card
    /// </summary>
    [Parameter]
    public Event Event { get; set; } = new Event();

    /// <summary>
    /// Indicates whether to show the details button
    /// </summary>
    [Parameter]
    public bool ShowDetailsButton { get; set; } = true;

    /// <summary>
    /// Indicates whether to show the event description
    /// </summary>
    [Parameter]
    public bool ShowDescription { get; set; } = false;
}
