@using EventEaseApp.Services
@inject UserSessionService SessionService
@inject NavigationManager Navigation
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EventEase</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="events">
                <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Events
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="attendance">
                <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> Attendance Tracker
            </NavLink>
        </div>

        @if (isLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profile">
                    <span class="bi bi-person-circle-nav-menu" aria-hidden="true"></span> My Profile
                </NavLink>
            </div>
            
            <div class="nav-item px-3 user-info">
                <div class="user-greeting">
                    <span class="bi bi-person-check-nav-menu"></span> @userName
                </div>
            </div>

            <div class="nav-item px-3">
                <button class="nav-link btn-logout" @onclick="HandleLogout">
                    <span class="bi bi-box-arrow-right-nav-menu" aria-hidden="true"></span> Logout
                </button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool isLoggedIn = false;
    private string userName = "";

    protected override async Task OnInitializedAsync()
    {
        await SessionService.InitializeAsync();
        UpdateUserState();
        SessionService.OnSessionChanged += HandleSessionChanged;
    }

    private void UpdateUserState()
    {
        isLoggedIn = SessionService.IsLoggedIn();
        var user = SessionService.GetCurrentUser();
        userName = user?.UserName ?? "";
    }

    private void HandleSessionChanged()
    {
        UpdateUserState();
        StateHasChanged();
    }

    private async Task HandleLogout()
    {
        await SessionService.LogoutUserAsync();
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        SessionService.OnSessionChanged -= HandleSessionChanged;
    }
}
