@page "/"
@using EventEaseApp.Models
@using EventEaseApp.Services
@using EventEaseApp.Components
@inject EventService EventService

<PageTitle>EventEase - Event Management</PageTitle>

<div class="home-page">
    <div class="hero-section">
        <h1>🎉 Welcome to EventEase</h1>
        <p class="hero-subtitle">Your comprehensive platform to discover and manage amazing events</p>
        <a href="/events" class="btn-explore">Explore All Events</a>
    </div>

    <div class="featured-events">
        <h2>Upcoming Featured Events</h2>
        
        @if (isLoading)
        {
            <div class="loading-container">
                <div class="spinner"></div>
                <p>Loading featured events...</p>
            </div>
        }
        else if (upcomingEvents == null || !upcomingEvents.Any())
        {
            <p class="no-events">No upcoming events at this time.</p>
        }
        else
        {
            <div class="events-grid">
                @foreach (var evt in upcomingEvents.Take(3))
                {
                    <div @key="evt.Id">
                        <EventCard Event="@evt" ShowDetailsButton="true" ShowDescription="false" />
                    </div>
                }
            </div>
        }
    </div>

    <div class="features-section">
        <h2>Why Choose EventEase?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">📅</div>
                <h3>Easy Navigation</h3>
                <p>Find events quickly and easily with our intuitive interface</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🎟️</div>
                <h3>Simple Registration</h3>
                <p>Register for events with just a few clicks</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🔔</div>
                <h3>Updates</h3>
                <p>Receive notifications about your favorite events</p>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Event>? upcomingEvents;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        // Simulate loading delay to demonstrate loading state
        await Task.Delay(500);
        upcomingEvents = EventService.GetUpcomingEvents();
        isLoading = false;
    }
}
